@model GeoRef.Models.GeoReferenceDto

<form asp-action="GeoReferenceDelete">
    <input asp-for="idGeoreferencia" hidden/>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Eliminar Georeferencia</h1>
        <hr />
        <div class="col-12">
            <div class="row">
                <div asp-validation-summary="None" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Estado</label>
                    </div>
                    <div class="col-4">
                        <select asp-for="idEstado" disabled="disabled" asp-items="@ViewBag.EstadosList" class="form-control">
                            <option disabled="disabled" selected="selected"> Selecciona Estado </option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;" asp-for="Latitud"></label>
                    </div>
                    <div class="col-5 pb-3">
                        <input asp-for="Latitud" disabled="disabled" class="form-control"/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label class="form-label pt-2" style="font-size:20px;" asp-for="Longitud"></label>
                    </div>
                    <div class="col-5 pb-3">
                        <input asp-for="Longitud" disabled="disabled" class="form-control"/>
                    </div>
                </div>

                <br />
                <br />
                <hr />
                <div class="form-group row">
                    <div class="col-5 offset-2">
                        <a asp-action="GeoReferenceIndex" class="btn-primary btn form-control">Regresar</a>
                    </div>

                    <div class="col-5">
                        <input type="submit" value="Eliminar" class="btn btn-danger form-control"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>