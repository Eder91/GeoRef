@model GeoRef.Models.EstadosDto

<form asp-action="EstadoCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Crear Estado</h1>

        <hr />
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Descripcion" class="control-label pt2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Descripcion" class="form-control"/>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Clave_Fiscal" class="control-label pt2" style="font-size:20px;"></label>
            </div>
            <div class="col-5 pb-3">
                <input asp-for="Clave_Fiscal" class="form-control"/>
                <span asp-validation-for="Clave_Fiscal" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="EstadoIndex" class="btn-primary btn form-control">Regresar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Crear" class="btn btn-success form-control"/>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}